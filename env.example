


# ASA Server Management - Native Mode Configuration
# ================================================

# Server Configuration
SERVER_MODE=native
PORT=4000
HOST=0.0.0.0
NODE_ENV=production

# JWT Authentication
JWT_SECRET=generate-secret-to-put-here
JWT_EXPIRES_IN=24h

# Native Server Configuration
NATIVE_BASE_PATH=F:\\ARK
NATIVE_CLUSTERS_PATH=F:\\ARK\\clusters
NATIVE_CONFIG_FILE=native-servers.json

# SteamCMD Configuration
STEAMCMD_PATH=
AUTO_INSTALL_STEAMCMD=true

# ASA Server Configuration
ASA_CONFIG_SUB_PATH=Config/WindowsServer

# RCON Configuration
RCON_DEFAULT_PORT=32330
RCON_PASSWORD=admin

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_TIME_WINDOW=60000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:4010

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Metrics
METRICS_ENABLED=true

# PowerShell Helper (for native server management)
POWERSHELL_ENABLED=true

# Docker Configuration (for hybrid mode in future)
DOCKER_SOCKET_PATH=\\\\.\\pipe\\docker_engine
DOCKER_ENABLED=false

# Agent Configuration (for hybrid mode in future)
AGENT_ENABLED=false
AGENT_URL=http://host.docker.internal:5000

# Monitoring Service Ports
# These ports are used by docker-compose.yml for service mapping
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
CADVISOR_PORT=8080

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ALLOW_SIGNUP=false
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel 
